---

let huidigeKorting = 0;
---

<div class="relative mb-6" id="discount-slider">

    <label for="range-input" class="sr-only">Labels range</label>
    <input
      id="range-input"
      type="range"
      min="0"
      max="100"
      class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-white-700"

    />
    <p>Huidige korting <span id="huidige-korting">50</span>%</p>
    <span class="text-sm text-black-700 absolute left-0 -bottom-6">0%</span>
    <span class="text-sm text-black absolute left-1/3 -translate-x-1/2 -bottom-6">35%</span>
    <span class="text-sm text-black absolute left-2/3 -translate-x-1/2 -bottom-6">70%</span>
    <span class="text-sm text-black-700 absolute right-0 -bottom-6">100%</span>

</div>

<script type="text/javascript">


    const discountSlider = document.getElementById("discount-slider");
    const korting = document.getElementById("huidige-korting");


    discountSlider.addEventListener("input", event => {
        discountValue = parseInt(event.target.value);
        huidigeKorting = discountValue;
        korting.textContent = huidigeKorting;
        console.log(discountValue);
    });


</script>

